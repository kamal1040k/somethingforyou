    <script>
        // Array of messages to display at the top
        const topMessages = [
            "My dearest love,",
            "You are the sunshine in my night.",
            "Every moment with you is a dream.",
            "My heart beats only for you.",
            "You make life beautiful.",
            "Forever and always, my love."
        ];
        let currentTopMessageIndex = 0;
        let topMessageTimeout;

        // Function to display a new top message
        function showNextTopMessage() {
            const messageElement = document.getElementById("top-message");
            if (!messageElement) return;

            // Fade out current message
            messageElement.style.opacity = "0";

            setTimeout(() => {
                // Update text and fade in new message
                messageElement.textContent = topMessages[currentTopMessageIndex];
                messageElement.style.opacity = "1";

                currentTopMessageIndex = (currentTopMessageIndex + 1) % topMessages.length;

                // Schedule next message change
                topMessageTimeout = setTimeout(showNextTopMessage, 5000); // Change message every 5 seconds
            }, 1000); // Wait for fade out (1s) before changing text and fading in
        }

        // Messages for click effect
        const clickMessages = [
            "I love you!",
            "You're amazing!",
            "My heart blooms for you!",
            "Always and forever!",
            "You're my everything!",
            "So glad you're mine!"
        ];
        let lastClickTime = 0;
        const clickCooldown = 200; // milliseconds

        // Function to handle click effects
        function handleClick(event) {
            const currentTime = Date.now();
            if (currentTime - lastClickTime < clickCooldown) {
                return; // Prevent rapid-fire clicks
            }
            lastClickTime = currentTime;

            const x = event.clientX;
            const y = event.clientY;

            // Create blast effect
            const blast = document.createElement("div");
            blast.className = "click-blast";
            blast.style.left = `${x}px`;
            blast.style.top = `${y}px`;
            document.body.appendChild(blast);

            // Remove blast after animation
            blast.addEventListener('animationend', () => {
                blast.remove();
            });

            // Create text effect
            const textEffect = document.createElement("div");
            textEffect.className = "click-text-effect";
            textEffect.style.left = `${x}px`;
            textEffect.style.top = `${y}px`;

            // Randomly select a message
            const randomMessage = clickMessages[Math.floor(Math.random() * clickMessages.length)];
            textEffect.textContent = randomMessage;
            document.body.appendChild(textEffect);

            // Remove text effect after animation
            textEffect.addEventListener('animationend', () => {
                textEffect.remove();
            });
        }

        // Function to create a single SVG butterfly
        function createButterfly(delay, duration, pathIndex) {
            const butterflyContainer = document.createElement("div");
            butterflyContainer.className = `butterfly butterfly-${pathIndex}`;
            butterflyContainer.style.animationDelay = `${delay}s`;
            butterflyContainer.style.animationDuration = `${duration}s`;

            // SVG for a simple butterfly
            butterflyContainer.innerHTML = `
                <svg class="butterfly-svg" viewBox="0 0 100 100">
                    <g class="wings">
                        <path class="wing left" d="M50,50 C30,20 10,10 0,30 C10,50 30,80 50,50 Z"></path>
                        <path class="wing right" d="M50,50 C70,20 90,10 100,30 C90,50 70,80 50,50 Z"></path>
                        <path class="wing left" d="M50,50 C35,65 20,75 10,70 C20,60 35,55 50,50 Z"></path>
                        <path class="wing right" d="M50,50 C65,65 80,75 90,70 C80,60 65,55 50,50 Z"></path>
                    </g>
                    <circle class="body" cx="50" cy="50" r="5"></circle>
                </svg>
            `;
            document.getElementById("butterflies-container").appendChild(butterflyContainer);
        }

        // This function runs when the window finishes loading
        window.onload = () => {
            // Initial animation start (remove not-loaded class)
            const c = setTimeout(() => {
                document.body.classList.remove("not-loaded");
                clearTimeout(c);

                // Show the romantic message at the bottom after 1.5 seconds
                setTimeout(() => {
                    const romanticMessageElement = document.getElementById("romantic-message");
                    if (romanticMessageElement) {
                        romanticMessageElement.style.opacity = "1";
                    }
                }, 1500);

                // Start cycling top messages after 2 seconds
                setTimeout(() => {
                    showNextTopMessage();
                }, 2000);

                // Create butterflies
                // Parameters: delay, duration, pathIndex (for different animation paths)
                createButterfly(0, 15, 1);
                createButterfly(3, 16, 2);
                createButterfly(6, 18, 3);
                createButterfly(9, 17, 4);
                createButterfly(12, 19, 5);

            }, 1000); // Initial delay for plant animation to start

            // Add click event listener to the body
            document.body.addEventListener('click', handleClick);
        };
    </script>
</body>
